{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "target": "es2017",
    "strict": false,
    "noEmit": true,
    "baseUrl": ".",
    "types" : ["node", "koa"],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "files": [
    "**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}